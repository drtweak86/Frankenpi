# === Target ===
BR2_aarch64=y
BR2_cortex_a72=y
BR2_ARM_FPU_VFPV4=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_TOOLCHAIN_GLIBC_GCONV_LIBS_COPY=y
BR2_TOOLCHAIN_HEADERS_LATEST=y
BR2_TOOLCHAIN_GCC_AT_LEAST_14=y
BR2_TARGET_OPTIMIZATION="-O3 -pipe -mcpu=cortex-a72 -mtune=cortex-a72"

# === Init + /dev ===
BR2_INIT_SYSTEMD=y
BR2_TARGET_GENERIC_GETTY=y
BR2_ROOTFS_DEVICE_CREATION_DYNAMIC_EUDEV=y
BR2_SYSTEM_DHCP="eth0"

# === Locale / keymap ===
BR2_GENERATE_LOCALE="en_GB.UTF-8 en_US.UTF-8"
BR2_SYSTEM_DEFAULT_LOCALE="en_GB.UTF-8"
BR2_SYSTEM_ENABLE_NLS=y
BR2_PACKAGE_KBD=y
BR2_PACKAGE_KBD_KEYMAP="uk"

# === Kernel (Pi 4) ===
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_LATEST=y
BR2_LINUX_KERNEL_DEFCONFIG="bcm2711"
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="broadcom/bcm2711-rpi-4-b broadcom/bcm2711-rpi-400"
BR2_LINUX_KERNEL_INSTALL_TARGET=y

# === Graphics stack (GBM/EGL/GLES + VC4) ===
BR2_PACKAGE_MESA3D=y
BR2_PACKAGE_MESA3D_GBM=y
BR2_PACKAGE_MESA3D_EGL=y
BR2_PACKAGE_MESA3D_GLES=y
BR2_PACKAGE_MESA3D_GALLIUM_DRIVER_VC4=y
BR2_PACKAGE_MESA3D_GALLIUM_DRIVER_LLVMPIPE=y
BR2_PACKAGE_LIBDRM=y
BR2_PACKAGE_LIBDRM_VC4=y
BR2_PACKAGE_LIBINPUT=y
BR2_PACKAGE_LIBXKBCOMMON=y
BR2_PACKAGE_V4L_UTILS=y

# === Audio ===
BR2_PACKAGE_ALSA_UTILS=y
BR2_PACKAGE_ALSA_UTILS_APLAY=y
BR2_PACKAGE_ALSA_UTILS_AMIXER=y

# === Python (Kodi hard dep) ===
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_PY_ONLY=y   # .pyc compiled at install

# === Networking quality-of-life ===
BR2_PACKAGE_NETWORK_MANAGER=y
BR2_PACKAGE_IW=y
BR2_PACKAGE_WPA_SUPPLICANT=y
BR2_PACKAGE_WPA_SUPPLICANT_PASSPHRASE=y
BR2_PACKAGE_WPA_SUPPLICANT_NL80211=y
BR2_PACKAGE_WPA_SUPPLICANT_DBUS=y
BR2_PACKAGE_OPENSSH=y

# === Kodi (GBM) ===
BR2_PACKAGE_KODI=y
BR2_PACKAGE_KODI_PLATFORM_GBM=y
BR2_PACKAGE_KODI_PROTOCOL_NFS=y
BR2_PACKAGE_KODI_PROTOCOL_SMB=y
BR2_PACKAGE_KODI_PLAYER=y

# === Useful libs Kodi addons like ===
BR2_PACKAGE_CURL=y
BR2_PACKAGE_FFMPEG=y
BR2_PACKAGE_FFMPEG_GPL=y
BR2_PACKAGE_FFMPEG_X264=y

# === Busybox + core FS tools ===
BR2_PACKAGE_E2FSPROGS=y
BR2_PACKAGE_E2FSPROGS_MKE2FS=y
BR2_PACKAGE_E2FSPROGS_E2FSCK=y
BR2_PACKAGE_BTRFS_PROGS=y
BR2_PACKAGE_DOSFSTOOLS=y
BR2_PACKAGE_PARTED=y

# === Compression (for repo zips etc) ===
BR2_PACKAGE_UNZIP=y
BR2_PACKAGE_ZIP=y
BR2_PACKAGE_XZ=y
BR2_PACKAGE_PIGZ=y
BR2_PACKAGE_BROTLI=y

# === Overlay / customization hook ===
BR2_ROOTFS_OVERLAY="board/frankenpi/overlay"
BR2_ROOTFS_POST_BUILD_SCRIPT="board/frankenpi/post-build.sh"
BR2_ROOTFS_POST_IMAGE_SCRIPT="board/frankenpi/post-image.sh"

# === Image type ===
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_TAR=y
